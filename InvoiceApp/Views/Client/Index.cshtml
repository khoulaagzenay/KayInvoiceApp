@model IEnumerable<Client>

@{
    ViewData["Title"] = "Clients";
}

<div class="contrainer p-3">
<div class="row pt-4 header-actions">
    <div class="col-6">
        <h2 class="text-primary">Client</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Client" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> &nbsp; Add New Client </a>
    </div>
</div> 
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nom</th>
            <th>SIREN</th>
            <th>Email Adress</th>
            <th>Phone Number</th>
            <th>Adresse</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.Name</td>
                <td>@client.Siren</td>
                <td>@client.Email</td>
                <td>@client.PhoneNumber</td>
                <td>@client.Address</td>
                <td>
                    <a asp-controller="Client" asp-action="Edit" asp-route-Id="@client.Id" class="btn btn-success"> <i class="bi bi-pencil-square"></i></a>
                    &nbsp;
                    <a asp-controller="Client" asp-action="Delete" asp-route-Id="@client.Id" class="btn btn-warning"> <i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
