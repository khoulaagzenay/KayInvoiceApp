@model Client
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" disabled class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Siren"></label>
        <input asp-for="Siren" disabled class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" disabled class="form-control" type="email" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" disabled class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" disabled class="form-control" />
    </div>

    <div class="form-group pt-3">
        <button type="submit" value="Create" class="btn btn-primary"> Delete </button>
        <a asp-action="index" asp-controller="client" class="btn btn-secondary"> Back to the list</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

